@page
@model MarketPlace.Web.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

}

<h1>Products</h1>

<a asp-page="upsert" class="btn btn-primary mb-3">Create New Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            var isInCart = Model.Cart.Items.Any(c => c.ProductId == product.Id);
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.CategoryName</td>
                <td>
                    @if (User.IsInRole("Admin") || product.SellerId == currentUserId)
                    {
                        <a asp-page="/Products/Upsert" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                        <form asp-page-handler="Delete" method="post" asp-route-id="@product.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                    else
                    {
                        @if (isInCart)
                        {
                            <button class="btn btn-secondary" disabled>
                                Already in Cart
                            </button>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="AddToCart" asp-route-id="@product.Id">
                                <button class="btn btn-success">Add to Cart</button>
                            </form>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
