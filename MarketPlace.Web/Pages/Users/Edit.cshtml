@page "{id}"
@model MarketPlace.Web.Pages.Users.EditModel

<h2>Edit User</h2>

<form method="post">
    <input type="hidden" asp-for="Input.Id" />

    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Input.DisplayName"></label>
        <input asp-for="Input.DisplayName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Input.Role"></label>
        <select asp-for="Input.Role" asp-items="@(new SelectList(Model.AllRoles))" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Users/Index" class="btn btn-secondary">Cancel</a>
</form>
